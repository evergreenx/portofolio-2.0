  <div class="lg:grid-cols-3 lg:space-y-0 space-y-7 grid-cols-1 grid lg:gap-5">
    <div class="bg-[#1D1D1D] rounded-2xl headline col-span-2 lg:h-[500px] h-[470px] p-[40px]">
      <div class="flex justify-between flex-col h-full">
        <About />
      </div>
    </div>
    <div
      class="bg-black heroimage bg-no-repeat bg-center bg-cover rounded-2xl h-[500px] bg-[url('https://res.cloudinary.com/evergreenx/image/upload/v1678322727/Group_1_2_igcstz.png')]"
    >
    </div>
  </div>
</section>
