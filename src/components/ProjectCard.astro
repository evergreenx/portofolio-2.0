---
import { projectsData } from "./data";
---

<div class="grid lg:grid-cols-2 lg:gap-4 lg:space-y-0 space-y-5" id="projects">
  {
    projectsData.map((project: any) => (
      <div
        class:list={`div ${project.color} load-hidden   projects  rounded-2xl h-[400px] flex flex-col justify-between   `}
      >
        <div class=" p-5">
          <div class="text-content flex justify-between w-full mt-3">
            <h2 class="text-lg font-semibold text-white ">{project.name}</h2>

            <div class="links flex text-white items-center space-x-3 text-lg">
              {project.ghlink && (
                <a
                  href={project.ghlink}
                  target="_blank"
                  class="transition-all hover:-translate-y-2"
                >
                  <i class="fa fa-github" />
                </a>
              )}

              <a
                href={project.livelink}
                target="_blank"
                class="transition-all hover:-translate-y-2"
              >
                <i class="fa fa-link"> </i>
              </a>
            </div>
          </div>
          <p class="font-normal text-base text-white ">{project.desc}</p>
        </div>

        <div class="image__container mx-6 ">
          <img
            class=" w-full lg:h-60"
            src={project.image}
            alt="project-cover"
          />
        </div>
      </div>
    ))
  }
</div>
