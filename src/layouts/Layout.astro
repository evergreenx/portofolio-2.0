---
import Footer from "../components/Footer.astro";
import NavBar from "../components/NavBar.astro";
import "@fontsource/roboto-mono";
import "@fontsource/roboto";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<style>
  body {
    font-family: "Roboto", sans-serif;
  }
</style>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

  </head>
  <body class="max-w-5xl bg-slate-100 lg:p-1 p-5 mx-auto">
    <NavBar />

    <slot />

    <Footer />
    <script is:inline src="https://unpkg.com/scrollreveal@4"></script>

    <script
      src="https://kit.fontawesome.com/5daa8eb347.js"
      crossorigin="anonymous"
    ></script>

    
    <script>
      ScrollReveal().reveal(".heroimage", {
        delay: 800,
        duration: 500,
        easing: "ease-in",
        origin: "right",
      });

      ScrollReveal().reveal(".navbar", {
        delay: 100,

        duration: 400,
        easing: "ease-in-out",
      });

      ScrollReveal().reveal(".headline", {
        delay: 1300,
        distance: "30px",
        easing: "ease-in",
        reset: true,
      });
      ScrollReveal().reveal(".projects", { delay: 1700, easing: "ease-in" });
      ScrollReveal().reveal(".footer", { delay: 1900 });
    </script>
  </body>
</html>
<style is:global></style>
